<?xml version="1.0" encoding="UTF-8"?>
<resource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://datacite.org/schema/kernel-4" xsi:schemaLocation="http://datacite.org/schema/kernel-4 http://schema.datacite.org/meta/kernel-4/metadata.xsd">
  <identifier identifierType="DOI">{{.DOI}}</identifier>
  <creators>{{range $index, $auth := .Authors}}
    <creator>
      <creatorName>{{$auth}}</creatorName>
    </creator>{{end}}
  </creators>
  <titles>
    <title>{{.Title}}</title>
  </titles>
  {{if .Description}}<descriptions>
    <description descriptionType="Abstract">
    {{.Description}}
    </description>
  </descriptions>{{end}}
  {{if .License}}<rightsList>
    <rights> {{.License}}</rights>
  </rightsList>{{end}}
  {{if .Keywords}}<subjects>{{range $index, $kw := .Keywords}}
     <subject xml:lang="en-us">{{$kw}}</subject>{{end}}
  </subjects>{{end}}
  <contributors>
    <contributor contributorType="HostingInstitution">
      <contributorName>German Neuroinformatics Node</contributorName>
    </contributor>
  </contributors>
  <publisher>G-Node</publisher>
  <publicationYear>2017</publicationYear>
  <language>eng</language>
  <resourceType resourceTypeGeneral="Dataset">Dataset</resourceType>
  <version>1</version>
</resource>